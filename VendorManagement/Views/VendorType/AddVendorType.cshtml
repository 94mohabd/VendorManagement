@model VendorManagement.Models.ViewModels.AddVendorTypeViewModel

@{
}
<h1>Add Vendor Type</h1>
<hr />

<form asp-action="AddVendorType" method="post">
    <div class="form-group mb-3">
        <label asp-for="VendorTypeId" class="control-label"></label>
        <input asp-for="VendorTypeId" class="form-control" readonly />
        <span asp-validation-for="VendorTypeId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Add Contract Cycle" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
