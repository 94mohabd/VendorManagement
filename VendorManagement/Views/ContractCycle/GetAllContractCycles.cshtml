@model List<VendorManagement.Models.Entities.ContractCycle>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Contract Cycles</h1>
    </div>
</div>


<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ContractCycleId</th>
                    <th>ContractCycleType</th>                                  
                    <th></th>                                  
                </tr>
            </thead>
            <tbody>
                @foreach (var contractCycle in Model)
                {
                    <tr>
                        <td>@contractCycle.ContractCycleId</td>
                        <td>@contractCycle.ContractCycleType</td>                        
                        <td>
                            <a asp-area=""
                               asp-controller="ContractCycle"
                               asp-action="EditContractCycle"
                               asp-route-id="@contractCycle.ContractCycleId">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No ContractCycle Found!</p>
    }
</div>
